@model List<Contact>

@{
}

<h2 class="text-center mb-5">List of Contacts</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Contact" asp-action="Create">New Contact</a>
    </div>
    <div class="col">

    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><img src="/contacts/@contact.ImageFileName" width="100" /></td>
                <td>@contact.Id</td>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.Phone</td>
                <td>@contact.Address</td>
                <td>@contact.City</td>
                <td>@contact.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
